<h1>Burgers!</h1>

<h2>To Be Devoured!</h2>

<ul>
  {{#each burgers}}
    {{name}} <button class="change status">Devour!</button>  
  {{/each}}
</ul>

<h2>Devoured burgers!</h2>

<ul>
  {{#each burgers}}
    {{name}}
  {{/each}}
</ul>


<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="ca" name="name">
  </div>

  <div class="form-group">
    <label for="sleepy">Devour?</label><br>
    <input type="radio" name="sleepy" value="1" checked> Sleepy!<br>
    <input type="radio" name="sleepy" value="0"> Awake
  </div>

  <button type="submit">Add Burger</button>
</form>
